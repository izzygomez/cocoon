<!DOCTYPE HTML>
<html>
  <head>
    <title>Cocoon</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="/js/line-navigator.js"></script>
    <script src="/js/file-navigator.js"></script>
  </head>
  <body>
    <div id="particles-js"></div>
    <div class="container">
      <nav class='navbar navbar-default navbar-inverse'>
        <div class='container-fluid'>
          <a class='navbar-brand' href='/'>Cocoon</a>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class='nav navbar-nav'>
              <li><a href='/home'>Back</a></li>
              <li><a href='/logout'>Logout</a></li>
            </ul>
          </div>
        </div>
      </nav>
      <h1>Upload file</h1>

      <form action="/upload" method="post" enctype="multipart/form-data">
        <p>Select ciphertext file to upload:</p>
        <input type="file" name="ciphertextFile" id="ciphertextFile">
        <br>
        <button class="btn btn-default" type="submit" value="Upload" name="submit">Upload</button>
        <p>{{message}}</p>

        <script type="text/javascript">
        $('#ciphertextFile').bind('change', function() {
          var size = this.files[0].size/1024/1024;
          if (size > 15) {
            this.value = "";
            alert('This file size is: ' + size + "MB. This is too big! Please upload a ciphertext <= 15 MB");
          }
        });
        </script>

      </form>
    </div>

    <script src="/js/particles.min.js"></script>
    <script src="/js/setup.js"></script>
  </body>
</html>
