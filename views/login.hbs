<!DOCTYPE HTML>
<html>
  <head>
    <title>Cocoon</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  </head>

  <body>
    <div id="particles-js"></div>
    <div class="container">
      <nav class='navbar navbar-default navbar-inverse'>
        <div class='container-fluid'>
          <a class='navbar-brand' href='/'>Cocoon</a>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class='nav navbar-nav'>
              <li><a href='/'>Back</a></li>
            </ul>
          </div>
        </div>
      </nav>

      <h1>Login</h1>

      <p>{{ message }}</p>

      <form method="post" action="/login">
        <div>Username: <input type='text' placeholder='Username' class='login-username' name='username' required /></div>
        <div>Password: <input type='password' placeholder='Password' class='login-password' name='password' required /></div>
        <button type='submit' class='login-submit'>Login</button>
      </form>
    </div>

    <script src="/js/particles.min.js"></script>
    <script src="/js/setup.js"></script>
  </body>
</html>
